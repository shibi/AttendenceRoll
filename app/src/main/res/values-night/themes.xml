    <style name="login_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/shape_login_bg</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/color_secondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="login_button_style" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/shape_login_btn_selector</item>
        <item name="android:textColor">@color/login_button_text_colorlist</item>
    </style>

    <style name="app_inputfield_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_border_rectangle</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_marginStart">@dimen/et_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/et_margin_start_end</item>
        <item name="android:paddingTop">@dimen/et_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/et_top_bottom_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:paddingStart">20dp</item>
    </style>

</resources>